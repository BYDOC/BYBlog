@model IEnumerable<BYBlog.Entity.Concrete.Comment>
<div class="comment-top">
    @if (Model.Count() > 0)
    {
        <h4>Comments</h4>
    }
    else
    {
        <h4>Be the first one who comments.</h4>
       
    }
     @foreach (var item in Model)
        {
            @if (Model.Count() <= 0)
            {
                <h1>no comment yet</h1>
            }
            <div class="media">
                <img src="~/template/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.UserName</h5>
                    <p>
                        @item.Content
                    </p>

                </div>
            </div>
        }
</div>