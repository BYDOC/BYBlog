@model IEnumerable<BYBlog.Entity.Concrete.Post>
@foreach (var item in Model.Take(3))
{
    <div class="blog-grids row mb-3">
        <div class="col-md-5 blog-grid-left">
            <a href="/Post/PostDetail/@item.Id">
                <img src="@item.Image" class="img-fluid" alt="">
            </a>
        </div>
        <div class="col-md-7 blog-grid-right">

            <h5>
                <a href="/Post/PostDetail/@item.Id">@item.Content.Substring(0,100)</a>
            </h5>
            <div class="sub-meta">
                <span>
                    <i class="far fa-clock"></i> @item.DateCreated.ToShortDateString()
                </span>
            </div>
        </div>

    </div>
}
